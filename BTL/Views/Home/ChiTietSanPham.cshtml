
@{
    ViewBag.Title = "ChiTietSanPham";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model BTL.Models.SanPham


<section class="bread-crumb">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 no-padding">
                <ul class="breadcrumbs">
                    <li class="home">
                        <a itemprop="url" href="@Url.Action("Index", "Home")">Trang chủ</a>
                        <span> / </span>
                    </li>
                    <li>
                        <a itemprop="url" href="@Url.Action("Index", "Home")">Laptop Asus</a>
                        <span> / </span>
                    </li>
                    <li><strong itemprop="title" href="@Url.Action("ChiTietSanPham","Home", new { id = Model.TenSanPham})">@Model.TenSanPham</strong></li>
                    <li></li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section class="product">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 details-product">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-lg-4 no-padding">
                        <div class="slider-galery ">
                            <div class="class_image_top">
                                <div class="text-center">
                                    <div id="myCarousel" class="carousel slide" data-ride="carousel" styte="">
                                        <!-- Indicators -->
                                        <ol class="carousel-indicators">
                                            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                                            <li data-target="#myCarousel" data-slide-to="1"></li>
                                            <li data-target="#myCarousel" data-slide-to="2"></li>
                                        </ol>
                                        <!-- Wrapper for slides -->
                                        <div class="carousel-inner" style="">
                                            <div class="item active">
                                                <img src="@Url.Content(Model.HinhAnh)">
                                                <div class="carousel-caption">
                                                    <h3></h3>
                                                    <p></p>
                                                </div>
                                            </div>
                                            <div class="item">
                                                <img src="@Url.Content(Model.HinhAnh)">
                                                <div class="carousel-caption">
                                                </div>
                                            </div>
                                            <div class="item">
                                                <img src="@Url.Content(Model.HinhAnh)">
                                                <div class="carousel-caption">
                                                </div>
                                            </div>
                                        </div>
                                        <!-- Left and right controls -->
                                        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                                            <span style="left:10px;margin-top:120px; position: absolute; z-index: 5; display: inline-block; color:black;"> <</span>
                                            <span class="sr-only">Previous</span>
                                        </a>
                                        <a class="right carousel-control" href="#myCarousel" data-slide="next">
                                            <span style="right:10px;margin-top:120px; position: absolute; z-index: 5; display: inline-block;color:black;">></span>
                                            <span class="sr-only">Next</span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-lg-5 details-pro">
                        <h1 class="product-name" style="font-size:25px;">
                            @Model.TenSanPham
                            <meta itemprop="url" content="">
                            <meta itemprop="name" content="">
                            <meta itemprop="image" content="">
                        </h1>
                        <div class="clear"></div>

                        <div class="price-box" itemprop="offers" itemscope="" itemtype="http://schema.org/Offer">
                            <meta itemprop="availability" content="Còn hàng">
                            <meta itemprop="price" content="">
                            <meta itemprop="priceCurrency" content="VND">
                            <div class="special-price">
                                <span class="price product-price">GIÁ:</span>
                                <span class="price product-price">@Model.Giá ₫</span>
                            </div>
                        </div>
                        <div class="product-policy">
                            <ul class="ListStyle1">
                                <li><span style="color: #000000;"><span style="font-size: small;"><strong>Model: </strong>@Model.Model</span></span></li>
                                <li><span style="color: #000000;"><span style="font-size: small;"><strong>Công nghệ CPU: </strong>@Model.Cpu</span></span></li>
                                <li><span style="color: #000000;"><span style="font-size: small;"><strong>Tốc độ CPU: </strong>@Model.Cpuspeed</span></span></li>
                                <li><span style="color: #000000;"><span style="font-size: small;"><strong>RAM: </strong>@Model.Ram</span></span></li>
                                <li><span style="color: #000000;"><span style="font-size: small;"><strong>Ổ cứng: </strong>@Model.Hdisk</span></span></li>
                                <li><span style="color: #000000;"><span style="font-size: small;"><strong>Kích thước màn hình: </strong>@Model.KickThuocMan</span></span></li>
                                <li><span style="color: #000000;"><span style="font-size: small;"><strong>Độ phân giải: </strong>@Model.DoPhanGiai</span></span></li>
                                <li><span style="color: #000000;"><span style="font-size: small;"><strong>Trọng lượng: </strong>@Model.TrongLuong</span></span></li>
                            </ul>
                        </div>
                        <div class="clear"></div>
                        <div class="form-product">
                            <div class="form-group fix-margin">
                                <div class="row">
                                    <div class="number-quality">
                                        <label for="exampleInputName2"><b>Số lượng:</b></label>
                                        <div class="custom custom-btn-number form-control">
                                            <input type="number" class="form-control" title="Số lượng" min="1" value="1" maxlength="100" id="quantity" name="quantity">
                                        </div>
                                    </div>
                                    <button type="submit" onclick="return giohang(56);" class="btn btn-lg btn-style btn-cart btn-cart2 add_to_cart" title="Cho vào giỏ hàng">
                                        <span>Thêm vào giỏ hàng</span>
                                    </button>
                                    <button type="submit" onclick="return giohang(56);" class="btn btn-lg btn-style btn-cart btn-cart2 add_to_cart" title="Cho vào giỏ hàng">
                                        <span>Mua sản phẩm</span>
                                    </button>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="hidden-xs col-lg-3 col-md-3 col-sm-12 col-xs-12 no-padding">
                        <aside class="hidden-lg-down">
                            <div class="aside aside-policy">
                                <div class="aside-policy-item" style=" margin-right: 10px; display:block;cursor: pointer">
                                    <img src="~/template/Default/img/p_policy_1.png" alt="Miễn phí vận chuyển với đơn hàng lớn hơn">
                                    <img src="~/template/Default/img/pw_policy_1.png" alt="Miễn phí vận chuyển với đơn hàng lớn hơn">
                                    <p>Miễn phí vận chuyển với đơn hàng lớn hơn</p>
                                </div>
                                <div class="aside-policy-item" style=" margin-right: 10px; display:block;cursor: pointer">
                                    <img src="~/template/Default/img/p_policy_2.png" alt="Giao hàng ngay sau khi đặt hàng ( áp dụng với Hà Nội &amp; HCM ) ">
                                    <img src="~/template/Default/img/pw_policy_2.png" alt="Giao hàng ngay sau khi đặt hàng ( áp dụng với Hà Nội &amp; HCM ) ">
                                    <p>Giao hàng ngay sau khi đặt hàng ( áp dụng với Hà Nội &amp; HCM ) </p>
                                </div>
                                <div class="aside-policy-item" style=" margin-right: 10px; display:block;cursor: pointer">
                                    <img src="~/template/Default/img/p_policy_3.png" alt="Đổi trả trong 3 ngày, thủ tục đơn giản.">
                                    <img src="~/template/Default/img/pw_policy_3.png" alt="Đổi trả trong 3 ngày, thủ tục đơn giản.">
                                    <p>Đổi trả trong 3 ngày, thủ tục đơn giản.</p>
                                </div>
                                <div class="aside-policy-item" style=" margin-right: 10px; display:block;cursor: pointer">
                                    <img src="~/template/Default/img/p_policy_4.png" alt="Nhà cung cấp xuất hóa đơn cho sản phẩm này.">
                                    <img src="~/template/Default/img/pw_policy_4.png" alt="Nhà cung cấp xuất hóa đơn cho sản phẩm này.">
                                    <p>Nhà cung cấp xuất hóa đơn cho sản phẩm này.</p>
                                </div>
                                <div class="aside-policy-item" style=" margin-right: 10px; display:block;cursor: pointer">
                                    <img src="~/template/Default/img/p_policy_5.png" alt="Tư vấn trực tuyến <br>Leanhgiang">
                                    <img src="~/template/Default/img/pw_policy_5.png" alt="Tư vấn trực tuyến <br>Leanhgiang">
                                    <p>Tư vấn trực tuyến - PhamKhacTu</p>
                                </div>
                            </div>
                        </aside>
                    </div>
                    <div class="clear"></div>
                    @{ Html.RenderPartial("Sidebar");}
                </div>
            </div>
        </div>
    </div>
</section>