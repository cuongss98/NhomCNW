@{
    ViewBag.Title = "Home Page";
}
@using BTL.Models
<!--start:body-->

<div class="container" style="padding-bottom:10px;padding-top:10px;">
    <div id="myCarousel" class="carousel slide" data-ride="carousel" styte="width:600px; height:110px; ">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" style="width:80%; height:200px; margin-left:auto; margin-right:auto;">
            <div class="item active">
                <img src="~/img/cover.png" alt="Los Angeles">
                <div class="carousel-caption">
                    <h3></h3>
                    <p></p>
                </div>
            </div>

            <div class="item">
                <img src="~/img/cover.png" alt="Chicago">
                <div class="carousel-caption">
                </div>
            </div>

            <div class="item">
                <img src="~/img/cover.png" alt="New York">
                <div class="carousel-caption">
                </div>
            </div>

        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span style="left:10px;margin-top:50%; position: absolute; z-index: 5; display: inline-block; color:black;"> <</span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span style="right:10px;margin-top:50%; position: absolute; z-index: 5; display: inline-block;color:black;">></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
@{
    ViewBag.Title = "Test";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="page-content">
    <div class="container">
        <div class="row">
            <section class="right-content col-lg-9 col-md-9  col-sm-12  col-xs-12 collection float-right no-padding-right">
                <div class="toolbar">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="header_search">
                                <form id="myForm" class="input-group search-bar" required="" style="width:100%;margin-bottom:10px;margin-top:10px;" >
                                    <div class="collection-selector" style="width:100px;">
                                        <select name="cmbTimKiem" class="search-select">
                                            <option value="">Tất cả</option>
                                        </select>
                                    </div>
                                    @using (Html.BeginForm("Index", "Home", FormMethod.Get)) // -- phần thay đổi
                                    {
                                        <div class="row">
                                            @*@Html.TextBox("SearchString","...", new { @class = "form-control input-group-field st-default-search-input search-text" })*@
                                            <div class="col-md-9 col-xs-12">
                                                <input type="text" id="SearchString" name="SearchString" placeholder="Tìm kiếm sản phẩm... " class="input-group-field st-default-search-input search-text" autocomplete="off" />
                                            </div>
                                            <div class="col-md-3 col-xs-6">
                                                <span class="input-group-btn">
                                                    <button class="btn" type="submit"
                                                            style="background:black;font-size:13px;color:antiquewhite;">
                                                        Search
                                                    </button>
                                                </span>
                                            </div>
                                        </div>
                                    }
                                </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="container_tabs product-tabs">
                        <ul class="tabs">
                            <li class="tab-link current">Danh sách sản phẩm </li>
                            <div class="clear"></div>
                        </ul>
                        <!-- NEW -->
                        <div id="tab-1" class="tab-content current">

                            <div class="module-product">

                                <div class="category-products">
                                    <section class="products-view products-view-grid">
                                        <div class="row">
                                            @foreach (SanPham x in Model)
                                            {
                                                <div class="col-lg-4 col-md-4  col-sm-6 col-xs-6">
                                                    <div class="product-box">
                                                        <div class="product-thumbnail">
                                                            <a href="@Url.Action("ChiTietSanPham", "Home", new {id = x.SanPhamId })" title="Laptop">
                                                                <img src="@Url.Content(x.HinhAnh)" style="width:200px;height:200px;">
                                                            </a>
                                                            <div class="variants pro-action-btn form-nut-grid">
                                                                <div>
                                                                    <a onclick="return giohang(56);" class="btn-cart btn btn-style  left-to">
                                                                        Mua Ngay
                                                                    </a>
                                                                    <a href="@Url.Action("ChiTietSanPham", "Home", new {id = x.SanPhamId })" data-handle="" class="btn-view btn btn-style  right-to quick-view">Xem chi tiết</a><br>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="product-info">
                                                            <h3 class="product-name">@x.TenSanPham</h3>
                                                            <div class="product-price text-center" style="display:block;" id="price01">@x.Giá ₫</div>
                                                            @if (x.KhuyenMaiId != null)
                                                            {
                                                                <div class="product-price-old" style="text-align:center; display:block;">
                                                                    14,750,000₫
                                                                </div>
                                                            }
                                                        </div>
                                                    </div>
                                                </div>
                                            }

                                        </div>
                                    </section>
                                </div>
                            </div>
                        </div>
                        <!-- end NEW -->

                        <div class="panel-footer">
                            <div class="row">
                                <div class="col col-xs-4">Trang 1 của 5 </div>
                                <div class="col col-xs-8">
                                    <ul class="pagination hidden-xs pull-right">
                                        <li>
                                            <a href="#">First</a>
                                        </li>
                                        <li>
                                            <a href="#">1</a>
                                        </li>
                                        <li>
                                            <a href="#">2</a>
                                        </li>
                                        <li>
                                            <a href="#">3</a>
                                        </li>
                                        <li>
                                            <a href="#">4</a>
                                        </li>
                                        <li>
                                            <a href="#">5</a>
                                        </li>
                                        <li>
                                            <a href="#"> >> </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- end san pham cung loai -->
                </section>
                <!-- danh muc san pham -->
                @{ Html.RenderPartial("Sidebar");}
            </div>
        </div>
    </section>
